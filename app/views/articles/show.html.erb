<p>
  <strong>标题：</strong>
  <%= @article.title %>
</p>

<p>
  <strong>内容：</strong>
  <%= @article.text %>
</p>

<h2>评论</h2>
<% @article.comments.each do |comment| %>
    <P>
      <strong>评论者<：/strong>
      <%= comment.commenter %>
    </P>
    <p>
      <strong>评论内容：</strong>
      <%= comment.body %>
    </p>
<% end %>

<h2>添加评论：</h2>
<%= form_for([@article,@article.comments.build]) do |f| %>
    <p>
      <%= f.label :commenter %><br>
      <%= f.text_field :commenter %>
    </p>

    <P>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </P>

    <p>
      <%= f.submit %>
    </p>
<% end %>
<%= link_to '首页', articles_path %> | <%= link_to '编辑',edit_article_path(@article) %>
